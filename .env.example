# ============================================
# ENVIRONMENT CONFIGURATION TEMPLATE
# ============================================
# Copy this file to .env and replace placeholders with your actual values
# NEVER commit .env file to git (it's in .gitignore)

# ============================================
# GOOGLE GEMINI API
# ============================================
GEMINI_API_KEY=your_google_gemini_api_key_here
GEMINI_MODEL=models/gemini-flash-latest

# ============================================
# HUGGING FACE
# ============================================
HUGGINGFACE_TOKEN=your_huggingface_token_here

# ============================================
# SUPABASE DATABASE
# ============================================
SUPABASE_URL=https://your_project_id.supabase.co
SUPABASE_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database connection string
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require

# ============================================
# QDRANT VECTOR DATABASE
# ============================================
QDRANT_API_KEY=your_qdrant_api_key_here
QDRANT_URL=https://your_qdrant_cluster_url.cloud.qdrant.io

# ============================================
# SENTENCE TRANSFORMERS
# ============================================
# Local embeddings model (runs locally, no API required)
SENTENCE_TRANSFORMERS_MODEL=sentence-transformers/all-mpnet-base-v2

# ============================================
# APPLICATION CONFIGURATION
# ============================================
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=true

# ============================================
# MODEL CONFIGURATION
# ============================================
EMBEDDING_DIMENSION=768
MAX_CHUNK_SIZE=400
CHUNK_OVERLAP=80

# ============================================
# STATPEARLS INGESTION
# ============================================
MAX_STATPEARLS_CHUNKS=2000
MIN_CONTENT_LENGTH=300

# ============================================
# RETRIEVAL CONFIGURATION
# ============================================
TOP_K_RETRIEVAL=10
SIMILARITY_THRESHOLD=0.7

# ============================================
# API SERVER CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ============================================
# SETUP INSTRUCTIONS
# ============================================
# 1. Copy this file: cp .env.example .env
# 2. Replace all "your_*_here" placeholders with real values
# 3. Get API keys from:
#    - Google Gemini: https://ai.google.dev/
#    - Hugging Face: https://huggingface.co/settings/tokens
#    - Supabase: https://supabase.com/dashboard
#    - Qdrant: https://cloud.qdrant.io/
# 4. NEVER commit .env file to git!
